<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="420" height="370" xmlns:custom="com.*" title="Add Element" showCloseButton="true"
    paddingLeft="0" paddingRight="0" paddingTop="0" paddingBottom="0"
>
    <mx:Script>
        <![CDATA[
            import mx.managers.*;
            import mx.events.*;
        ]]>
    </mx:Script>

    <mx:HBox width="100%" height="100%">
        <mx:VBox height="100%" width="100%" horizontalAlign="center">
            <mx:Label text="Available Vertices"/>
            <mx:DataGrid width="100%" height="100%">
                <mx:columns>
                    <mx:DataGridColumn dataField="X" headerText="X"/>
                    <mx:DataGridColumn dataField="Y" headerText="Y"/>
                </mx:columns>
            </mx:DataGrid>
        </mx:VBox>

        <mx:VBox height="100%" verticalAlign="middle" >
            <mx:Button label=">>"/>
            <mx:Button label="R"/>
        </mx:VBox>

        <mx:VBox height="100%" width="100%" verticalAlign="middle" horizontalAlign="center">
            <mx:Label text="Element Vertices"/>
            <mx:DataGrid width="100%">
                <mx:columns>
                    <mx:DataGridColumn dataField="X" headerText="X"/>
                    <mx:DataGridColumn dataField="Y" headerText="Y"/>
                </mx:columns>
            </mx:DataGrid>
        </mx:VBox>
    </mx:HBox>
    
    <mx:ControlBar bottom="0" left="0" horizontalAlign="center">
        <mx:Button id="btnAdd" label="Add"/>
    </mx:ControlBar>
    
</mx:TitleWindow>  

